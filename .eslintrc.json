{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"commonjs": true,
		"jest": true
	},
	"extends": ["standard", "prettier", "prettier/standard"],
	"plugins": ["prettier"],
	"globals" : {
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": true,
				"printWidth": 120
			}
		],
		"semi": [2, "always"],
		"indent": [2, "tab", {"SwitchCase": 1}],
		"no-tabs": 0,
		"no-new": 1
	}
}
